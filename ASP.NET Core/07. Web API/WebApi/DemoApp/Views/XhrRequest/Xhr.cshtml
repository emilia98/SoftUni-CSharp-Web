
@{
    ViewData["Title"] = "Xhr";
}

<div>
    <h1 class="display-3 text-center">XHR</h1>

    <button class="btn btn-primary" onclick="hello()">Click me</button>
    <div class="mt-3" id="placeholderElement"></div>
</div>

<script>
    function hello() {
        var xhr = new XMLHttpRequest();

        xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                console.log(this.responseText);
                document.getElementById("placeholderElement").innerHTML = "<code>" + this.responseText + "</code>";
            }
        }

        xhr.open("GET", "/XhrRequest/JsonTest", true);
        xhr.send();
    }
</script>
