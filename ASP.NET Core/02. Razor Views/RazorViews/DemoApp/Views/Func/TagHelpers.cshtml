@model DemoApp.ViewModels.Data.IndexViewModel
@{
    ViewData["Title"] = "TagHelpers";
}

    <div>
        <h1 class="display-3 text-center">TagHelpers</h1>

        <div class="mb-5">
            <form asp-action="Index">
            </form>
            <code>
                <span class="d-block">@("<form asp-action=\"Index\">")</span>
                <span class="d-block">&nbsp;&nbsp;&nbsp;...</span>
                <span class="d-block">@("</form>")</span>
            </code>
            <p>- automatically generates a CSRF token</p>
        </div>

        <div class="mb-5">
            <a class="btn btn-danger mb-3" asp-controller="Func" asp-action="Index" asp-route-id="4">Index</a>
            <code>
                <span class="d-block">@("<a class=\"btn btn-danger mb-3\" asp-controller=\"Func\" asp-action=\"Index\" asp-route-id=\"4\">Index</a>")</span>
            </code>
            <p>- used for easy routing</p>
        </div>

        <div class="mb-5">
            <input asp-for="Year" />
            <input asp-for="Message" />
            <code>
                <span class="d-block">@("<input asp-for=\"Year\" />")</span>
                <span class="d-block">@("<input asp-for=\"Message\" />")</span>
            </code>
            <p>- for easy generating input fields with correct types for the properties of the view model</p>
        </div>

    </div>


