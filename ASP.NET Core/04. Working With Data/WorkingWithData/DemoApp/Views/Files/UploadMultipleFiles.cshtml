@model DemoApp.Models.InputModels.MultipleFilesInputModel
@{
    ViewData["Title"] = "UploadMultipleFiles";
}

<div>
    <h1 class="display-3 text-center">UploadMultipleFiles</h1>

    <div class="col-md-6 m-auto">
        <form asp-controller="Files" asp-action="UploadMultipleFiles" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Names.FirstName"></label>
                <input asp-for="Names.FirstName" class="form-control" />
                <span asp-validation-for="Names.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Names.LastName"></label>
                <input asp-for="Names.LastName" class="form-control" />
                <span asp-validation-for="Names.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Files"></label>
                <input asp-for="Files" class="form-control" />
                <span asp-validation-for="Files" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}